{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "esModuleInterop": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "target": "ES2015"
  },
  "include": [
    "./index.ts",
    "./src/**/*",
    "./examples/**/*",
    "./test/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
